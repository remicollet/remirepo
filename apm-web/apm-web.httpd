# APM (Alternative PHP Monitor)
#
# Allows only localhost by default
#

Alias /@ALIAS@ @SHARE@/@ALIAS@

<Directory @SHARE@/@ALIAS@/>
   AddDefaultCharset UTF-8

   <IfModule mod_authz_core.c>
     # Apache 2.4
     Require local
   </IfModule>
   <IfModule !mod_authz_core.c>
     # Apache 2.2
     Order Deny,Allow
     Deny from All
     Allow from 127.0.0.1
     Allow from ::1
   </IfModule>
</Directory>
